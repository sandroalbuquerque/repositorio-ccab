Static Function IMPRIME(cPedDe, cPedAte,pTipo, pcFil)

	Local cQuery	:= ""
	Local cCond		:= ""
	Local cTpFrete	:= ""
	Local cCompra	:= ""
	Local nValIPI	:= 0
	Local nValICM	:= 0
	Local nTotal	:= 0
	Local lExist	:= .F.
	Local lPrimeira	:= .T.
	Local nAj_Cod   := -20
	Local nAj_G     := -20                  
	Local nAj       := 20                       
	Local nDif      := 20
	Local nFrete    := 0
	Local nSeguro   := 0
	Local nDespesas := 0  
	Local nOutros   := 0       
	Local nDesconto := 0
	Local cMemo            
	Local cObsPed   := ''
	Local nGrafico  := 0    
	Local nTotNF    := 0

	Private cFornece	:= ""
	Private cLojaFor	:= ""
	Private cPedido		:= ""
	Private dEmissao	:= CtoD("")
	Private cComprador  := ""
	Private cNumSC      := ""
	Private cNumCOT     := ""
	
	Private oFont0	:= TFont():New("Times New Roman",,018,,ON_NEGRITO ,,,,,OFF_UNDERLINE,OFF_ITALICO)
	Private oFontT	:= TFont():New("Times New Roman",,015,,ON_NEGRITO ,,,,,OFF_UNDERLINE,OFF_ITALICO)
	Private oFont1	:= TFont():New("Times New Roman",,016,,ON_NEGRITO ,,,,,OFF_UNDERLINE,OFF_ITALICO)
	Private oFont2	:= TFont():New("Times New Roman",,012,,ON_NEGRITO ,,,,,OFF_UNDERLINE,OFF_ITALICO)
	Private oFont3	:= TFont():New("Times New Roman",,007,,OFF_NEGRITO,,,,,OFF_UNDERLINE,OFF_ITALICO)
	Private oFont4	:= TFont():New("Times New Roman",,011,,ON_NEGRITO ,,,,,OFF_UNDERLINE,OFF_ITALICO)
	Private oFont5	:= TFont():New("Times New Roman",,007,,OFF_NEGRITO,,,,,OFF_UNDERLINE,OFF_ITALICO)
	Private oFont5b	:= TFont():New("Times New Roman",,007,,ON_NEGRITO ,,,,,OFF_UNDERLINE,OFF_ITALICO)
	Private oFont6	:= TFont():New("Times New Roman",,014,,ON_NEGRITO ,,,,,OFF_UNDERLINE,OFF_ITALICO)
	Private oFont6i	:= TFont():New("Times New Roman",,012,,ON_NEGRITO ,,,,,OFF_UNDERLINE, ON_ITALICO)    
	Private oFont6b	:= TFont():New("Times New Roman",,006,,ON_NEGRITO ,,,,,OFF_UNDERLINE,OFF_ITALICO)
	//                                                          

	IF !Empty(pcFil)
	  _cFilial := pcFil
	Else 
	  _cFilial := xFilial('SC7')
	Endif
   
		                             
	// 
	oBrush1			:= TBrush():New( , CLR_BLACK )	
	oBrush2			:= TBrush():New( , CLR_GRAY )	
	
	nLin 			:= 8000
	nEspaco			:= 070
	nDif			:= 10
	nMaxLin			:= 2450     //2390     //2590
	nPagina			:= 0
	                
	oPrint := TMSPrinter():New()

	if pTipo = 'I'
		//oPrint:SetLandscape()
		oPrint:SetPortrait()
		oPrint:Setup()
		oPrint:SetPaperSize(9)
		oPrint:StartPage()
    endif
    
    // Monta query para impressão do relatório
	cQuery := MontaQuery(cPedDe, cPedAte, _cFilial)	
	
	If Select("TRB") > 0
		TRB->(dbCloseArea())
	EndIf

	DbUseArea(.T., "TopConn", TCGenQry( NIL, NIL, cQuery), "TRB", .F., .F.)
    TRB->(dbGoTop())

	If !TRB->(Eof())

		lExist 		:= .T.
		
		While !TRB->(Eof())

			cPedido 	:= TRB->PEDIDO
			lPrimeira	:= .T.

			DbSelectarea("SC7")
			SC7->(DbSetorder(1))
			If SC7->( MsSeek(_cFilial + cPedido) )   // cPedDe
                    
				nTotNF    := 0
				nDesconto := 0
				nSeguro   := 0
				nFrete    := 0
				nDEspesas := 0

				cFornece	:= SC7->C7_FORNECE
				cLojaFor	:= SC7->C7_LOJA
				dEmissao	:= SC7->C7_EMISSAO
				cNumSC      := SC7->C7_NUMSC
				cNumCOT     := SC7->C7_NUMCOT   
		
				If (nLin > nMaxLin)
				   ImpCabec(1,pTipo)
				EndIf
                        
			    // Imprime Titulo do Pedido
                nLin := ImpTitulos(pTipo, oPrint, nLin, nEspaco, nDif, nAj, nAj_G, nAj_Cod)
				cObsPed:= ''                                                                               
			    While !Eof() .And. SC7->C7_NUM == cPedido .AND. SC7->C7_FILIAL == _cFilial

					// Efetuando Tratamento de Campo Memo
					//cCodObs := Posicione("SB1",1,xFilial("SB1") + SC7->C7_PRODUTO, "B1_CODOBS") Removido por solicitação Rejiane informou que tem que ser pego
				    //	                                                                              a observação do C7_OBS REUNIÃO DE 30/05/2012
				    
					cMemo   := SC7->C7_OBS                            //MSMM(cCodObs)                VALDEMIR 30/05/2012
					
					if !Empty(SC7->C7_XCODENT)
					    cCodEnt     := SC7->C7_XCODENT
					eNDIF
                    
                    if Len(alltrim(cMemo)) = 0
                     nGrafico := 0 //-70
                    endif
                    
                    // Imprime as Colunas do Pedido
                    if pTipo ='I'
						ImprimeColunas(oPrint, cMemo, nLin, nEspaco+nGrafico, nDif, nAj_G, nAj) 
					ELSE
					  nLin += 20
					endif
					if pTipo = 'I'
						// Faz Impressão dos Dados do Pedido					
						oPrint:Say(nLin+nDif,085,SC7->C7_ITEM,oFont3)
						oPrint:Say(nLin+nDif,180,SC7->C7_PRODUTO,oFont3)
						oPrint:Say(nLin+nDif,417+nAj_G,Posicione("SB1",1,xFilial("SB1") + SC7->C7_PRODUTO, "SB1->B1_DESC"),oFont3)
						oPrint:Say(nLin+nDif,1173+nAj_G,Transform(SC7->C7_QUANT,"@E 9999999.9"),oFont3,,,,1)
						oPrint:Say(nLin+nDif,1195+nAj_G+nAj,SC7->C7_UM,oFont3)
						oPrint:Say(nLin+nDif,1362+nAj_G+nAj+nDif,Transform(SC7->C7_PRECO,"@E 9,999,999.99999"),oFont3,,,,1)
						oPrint:Say(nLin+nDif,1434+nAj_G+nAj+nDif,Transform(SC7->C7_DESC,"@E 99")+"%",oFont3,,,,1)
						oPrint:Say(nLin+nDif,1529+nAj_G+nAj+nDif,Transform(SC7->C7_VLDESC,"@E 999,999.999"),oFont3,,,,1)
						oPrint:Say(nLin+nDif,1615+nAj_G+nAj+nDif,Transform(SC7->C7_IPI,"@E 99")+"%",oFont3,,,,1)
						oPrint:Say(nLin+nDif,1720+nAj_G+nAj+nDif,Transform(SC7->C7_VALIPI,"@E 999,999.99"),oFont3,,,,1)
						oPrint:Say(nLin+nDif,1896+nAj_G+nAj+nDif,Transform(SC7->C7_PRECO-SC7->C7_VLDESC,"@E 999,999.99999"),oFont3,,,,1)
						oPrint:Say(nLin+nDif,2101+nAj_G+nAj+nDif,Transform(SC7->C7_TOTAL,"@E 999,999,999.99"),oFont3,,,,1)
						oPrint:Say(nLin+nDif,2163+nDif,DtoC(SC7->C7_DATPRF),oFont3)
                    Endif
                      
					cCond		:= SC7->C7_COND
					nValIPI		:= nValIPI + SC7->C7_VALIPI
					nValICM		:= nValICM + SC7->C7_VALICM
					cTpFrete	:= SC7->C7_TPFRETE
					cCompra		:= SC7->C7_USER    
					nTotal		:= nTotal + SC7->C7_TOTAL 
					nTotNF      := nTotNF + SC7->C7_TOTAL 
					nSeguro     += SC7->C7_SEGURO
					nFrete      += SC7->C7_VALFRE 
					nDespesas   += SC7->C7_DESPESA
					nDesconto   += SC7->C7_DESC1+SC7->C7_DESC2+SC7->C7_DESC3
                    nLin 		:= ImprimeObs(oPrint, cMemo, nLin, nEspaco-20, nDif, nAj_G, nAj, pTipo) 
		
					If nLin > nMaxLin 
					    nLin += 25
						oPrint:Line(nLin+nGrafico,70,nLin+nGrafico,2320)                         // Traço
						ImpRodape(nLin, nEspaco, nAj_G, nAj, nDif, pTipo)
						ImpCabec(1,pTipo)
					    // Imprime Titulo do Pedido
		                nLin := ImpTitulos(pTipo, oPrint, nLin, nEspaco, nDif, nAj, nAj_G, nAj_Cod)
					EndIf
					
					IF EMPTY(cObsPed)
					  cObsPed := " "+SC7->C7_XOBSPED
					ENDIF

					SC7->(DbSkip())
				
			   Enddo                 
               
               
               // Valor Total Liquido                     
               nTotal	  +=  nValIPI + nFrete + nSeguro + nDespesas    // 
               nTotNF     -= nDesconto
                
               
			   //  Faz impressão até o final
			   While nLin <= nMaxLin
		         if pTipo ='I'
					ImprimeColunas(oPrint, cMemo, nLin, nEspaco+20, nDif, nAj_G, nAj)   //+nGrafico
				 endif
				 nLin += 90
			   End                         
			   
			   nGrafico := 0	
    	       if Len(alltrim(cMemo)) = 0
                  nGrafico := 0
               endif               
               
               if pTipo='I'
					// Total do Pedido
					oPrint:Line(nLin+nGrafico,70,nLin+nGrafico,2320)                         // Traço
					//
					oPrint:FillRect({nLin,70,nLin+nEspaco,376},oBrush1)
					oPrint:FillRect({nLin,378,nLin+nEspaco,576},oBrush1)
					oPrint:FillRect({nLin,578,nLin+nEspaco,776},oBrush1)
					oPrint:FillRect({nLin,778,nLin+nEspaco,976},oBrush1)
					oPrint:FillRect({nLin,978,nLin+nEspaco,1173+nAj_G+nAj},oBrush1)
					//
					oPrint:Say(nLin+20, 170,"FRETE"   ,oFont3,,CLR_WHITE)
					oPrint:Say(nLin+20, 427,"SEGURO"  ,oFont3,,CLR_WHITE)
					oPrint:Say(nLin+20, 620,"DESPESAS",oFont3,,CLR_WHITE)
					oPrint:Say(nLin+20, 850,"IPI"     ,oFont3,,CLR_WHITE)
					oPrint:Say(nLin+20,1020,"ICMS"    ,oFont3,,CLR_WHITE)
					                                          
					// Quadro do Total do Pedido
					oPrint:FillRect({nLin+20,1709+nAj_G+nAj+nDif,nLin+nEspaco+160,2320},oBrush2)   // 140
					oPrint:Say(nLin+50,1420,"VALOR TOTAL PEDIDO"  ,oFont3)
					oPrint:Say(nLin+40,2180, Transform(nTotal   ,"@E 999,999,999.99"),oFont2,,,,1)	
				endif
				nLin+=nEspaco

                if pTipo='I'
					// Quadro de Dados
					oPrint:Box(nLin, 70,nLin+nEspaco,377)
					oPrint:Box(nLin,377,nLin+nEspaco,577)
					oPrint:Box(nLin,577,nLin+nEspaco,777)
					oPrint:Box(nLin,777,nLin+nEspaco,977)
					oPrint:Box(nLin,977,nLin+nEspaco,1172+nAj_G+nAj)
					// Dados
					oPrint:Say(nLin+20, 290, Transform(nFrete   ,"@E 999,999,999.99")    ,oFont3,,,,1)
					oPrint:Say(nLin+20, 537, Transform(nSeguro  ,"@E 999,999,999.99")    ,oFont3,,,,1)
					oPrint:Say(nLin+20, 730, Transform(nDespesas,"@E 999,999,999.99")    ,oFont3,,,,1)
					oPrint:Say(nLin+20, 950, Transform(nValIPI  ,"@E 999,999,999.99")    ,oFont3,,,,1)
					oPrint:Say(nLin+20,1130, Transform(nValICM  ,"@E 999,999,999.99")    ,oFont3,,,,1)
				endif
				nLin+=nEspaco

                if pTipo='I'
					// Quadro de Descontos
					oPrint:Box(nLin, 70,nLin+nEspaco,377)
					oPrint:FillRect({nLin,70,nLin+nEspaco,377},oBrush1)
					oPrint:Box(nLin,377,nLin+nEspaco,777)
					oPrint:Say(nLin+20, 100,"DESCONTO"   ,oFont3,,CLR_WHITE)
					oPrint:Say(nLin+20, 730, Transform(nDesconto,"@E 999,999.99")    ,oFont3,,,,1)
					oPrint:Say(nLin,1420,"VALOR TOTAL LIQUIDO"  ,oFont3)
					oPrint:Say(nLin,2180, Transform(nTotNF   ,"@E 999,999,999.99"),oFont2,,,,1)	
                endif
                //nLin += 50
				nLin += 100
				if pTipo = 'I'                                      
					oPrint:FillRect({nLin, 070,(nLin+nEspaco)-10,2321},oBrush1)
					oPrint:Say(nLin+20,  1100,"OBSERVAÇÃO"  ,oFont5b,,CLR_WHITE)
				endif                                     
				//
				oPrint:Box(nLin, 1140,nLin+nEspaco,1140)
			    // Carrega Observações
			    aObsProd := TrataMemo(cObsPed, 115)
				nLin += 70
				xnLin := nLin

				oPrint:Box(nLin, 1140,nLin+nEspaco,1140)
				oPrint:Say(nLin   ,   090,  '01-AS ENTREGAS DEVERÃO SEGUIR A PROGRAMAÇÃO EXPRESSA ACIMA A CCAB' , oFont6b)
				oPrint:Say(nLin   ,  1160,  '06-NÃO SERÁ RECEBIDO MATERIAL COM VALIDADE INFERIOR A 18 MESES DA DATA DE FATURAMENTO Á CCAB' , oFont6b)
				nLin += 40
				oPrint:Box(nLin, 1140,nLin+nEspaco,1140)
				oPrint:Say(nLin   ,   090,  '02-NENHUM PRODUTO DEVE SER ENVIADO SEM A PREVIA AUTORIZAÇÃO DA CCAB' , oFont6b)
				oPrint:Say(nLin   ,  1160,  '07-NO PREÇO ACIMA DEFINIDO ESTÁ INCLUSO ICMS' , oFont6b)
				nLin += 40
				oPrint:Box(nLin, 1140,nLin+nEspaco,1140)
				oPrint:Say(nLin   ,   090,  '03-TODO PEDIDO DEVERA ESTAR ASSINADO PELO FORNECEDOR' , oFont6b)
				oPrint:Say(nLin   ,  1160,  '08-NO FORNECIMENTO FOB O MATERIAL SERA DISPONIBILIZADO NO VEICULO TRANSPORTADOR ' , oFont6b)
				nLin += 40
				oPrint:Box(nLin, 1140,nLin+nEspaco,1140)
				oPrint:Say(nLin   ,   090,  '04-TODO MATERIAL  DEVERA ESTAR ACOMPANHADO DO CERTIFICADO DE ANALISE' , oFont6b)
				oPrint:Say(nLin   ,  1160,  '09-O FATURAMENETO SÓ PODERA ACONTECER PARA A UNIDADE DA CCAB DEFINIDA ACIMA' , oFont6b)
				nLin += 40
				oPrint:Box(nLin, 1140,nLin+nEspaco-30,1140)
				oPrint:Say(nLin   ,   090,  '05-NÃO SERA RECEBIDO MATERIAL FORA DE ESPECIFICAÇÃO E/OU APRESENTANDO AVARIAS' , oFont6b)
				oPrint:Say(nLin   ,  1160,  '10-O FATURAMENTO DEVERA SER REALIZADO PELO FORNECEDOR DEFINIDO NO PEDIDO' , oFont6b)
				nLin += 40 
				        
				if LEN(aObsProd) > 0
					oPrint:Box(nLin, 70,nLin,2321)
				endif

			    FOR  nxReg := 1 TO LEN(aObsProd)
					if pTipo = 'I'
						oPrint:Say(nLin,090,aObsProd[nxReg][1],oFont4)
		   			endif
					nLin += 50
				
	    		NEXT
				oPrint:Box(xnLin-20, 070,nLin+nEspaco-50, 2320)
				
				//If nLin > nMaxLin
				ImpRodape(nLin, nEspaco, nAj_G, nAj, nDif, pTipo)
				//ImpCabec(2, pTipo)
				//ImpObservacoes(nLin, nEspaco, nAj_G, nAj, nDif, pTipo, _cFilial)

				nLin := 8000
				
			EndIf
			
			TRB->(DbSkip())
		Enddo
	Else
		Aviso("Aviso","Não Existem dados a Serem Impressos, nos parametros Informados...",{"Ok"},2)
	EndIf

	If Select("TRB") > 0
		TRB->(dbCloseArea())
	EndIf

	If lExist         
		if pTipo = 'I'
			oPrint:Preview()
		endif
	EndIf

Return Nil
                        


