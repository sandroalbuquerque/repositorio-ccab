	oPrint:Line(nLin,1630+nAj_G+nAj+nDif,nLin+nEspaco,1630+nAj_G+nAj+nDif)  // Valor IPI
	oPrint:Line(nLin,1739+nAj_G+nAj+nDif,nLin+nEspaco,1739+nAj_G+nAj+nDif)  // Valor Unit c/ Desconto
	oPrint:Line(nLin,1921+nAj_G+nAj+nDif,nLin+nEspaco,1921+nAj_G+nAj+nDif)  // Valor Total
