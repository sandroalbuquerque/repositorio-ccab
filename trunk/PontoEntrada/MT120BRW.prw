Static Function VerifAuto(pNUM)
	Local lRET := .F.
	Local cQuery
	       
	// Posiciona Aprovadores
	cQuery := QueryAprov(pNUM)	
	
	If Select("TAPROV") > 0
		TAPROV->(dbCloseArea())
	EndIf

	DbUseArea(.T., "TopConn", TCGenQry( NIL, NIL, cQuery), "TAPROV", .F., .F.)
    TAPROV->(dbGoTop())

	Do While TAPROV->( !EOF() )	
		
		lRet := .T.
			          
		TAPROV->( dbSkip() )
	
	EndDo
	
	TAPROV->( dbCloseArea() )
	
Return lRET                       

                           

