   Local cxRegra := ""
   Local cQry    := ""       
   Local cMemo   := ""
   
   dbSelectArea('SC7')
               
   // Verifica se existe aprovadores - Se existir, não grava
   //bGrava := VerifAuto(SC7->C7_NUM)         
	
